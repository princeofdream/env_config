###########################################################################
#                            TextMate Snippets                            #
###########################################################################

priority -50

snippet spr "sprintf ..."
sprintf(${1:value}, "${2:%s}\n"${2/([^%]|%%)*(%.)?.*/(?2:, :\);)/}$3${2/([^%]|%%)*(%.)?.*/(?2:\);)/}
endsnippet

snippet prk "printk ..."
printk(${1:KERN_CRIT} "${2:%s}\n"${2/([^%]|%%)*(%.)?.*/(?2:, :\);)/}$3${2/([^%]|%%)*(%.)?.*/(?2:\);)/}
endsnippet

snippet ppr "printk ..."
printf("--<%s:%d>--[${1:%s}]\n", __FILE__,__LINE__,${2:value});
endsnippet

snippet un "unsigned ..."
unsigned ${1:int} ${2:value}
endsnippet

